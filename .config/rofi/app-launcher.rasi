@theme "~/.config/rofi/_catppuccin_mocha.rasi"

// Config //
configuration {
    modi:                        "drun,filebrowser,window,run";
    show-icons:                  true;
    display-drun:                " ";
    display-run:                 " ";
    display-filebrowser:         " ";
    display-window:              " ";
    drun-display-format:         "{name}";
    window-format:               "{w}{t}";
    font:                        "JetBrainsMono Nerd Font 12";
    icon-theme:                  "Tela-circle-dracula";
}

// Main //
window {
    height:                      20em;
    width:                       35em;
    transparency:                "real";
    fullscreen:                  false;
    enabled:                     true;
    cursor:                      "default";
    spacing:                     0em;
    padding:                     0em;
    border-color:                @border-col;
    background-color:            @bg-col;
    border-radius:               0.7em;
    border:                      0.2em;
}
mainbox {
    enabled:                     true;
    spacing:                     0em;
    padding:                     0em;
    orientation:                 vertical;
    children:                    [ "choicebox" , "listbox" ];
    background-color:            @bg-col;
}

choicebox {
    enabled:                     true;
    spacing:                     0em;
    padding:                     0em;
    orientation:                 horizontal;
    children:                    [ "inputbar", "mode-switcher" ];
    background-color:            transparent;
    expand:                      false;
}

// Inputs //
inputbar {
    enabled:                     true;
    width:                       19em;
    padding:                     0em;
    spacing:                     0em;
    children:                    [ "entry" ];
    background-color:            transparent;
    expand:                      false;
}

entry {
    enabled:                     true;
    padding:                     1em;
    text-color:                  @fg-col;
    background-color:            transparent;
    vertical-align:              0.5;
    placeholder:                 "";
}

// Modes //
mode-switcher {
    width: 15em;
    orientation:                 horizontal;
    enabled:                     true;
    padding:                     0.5em;
    spacing:                     0em;
    background-color:            transparent;
    expand:                      false;
}
button {
    padding:                     0em;
    cursor:                      pointer;
    border-radius:               0.3em;
    background-color:            @bg-col;
    text-color:                  @fg-col;
}
button selected {
    background-color:            @selected-col;
    text-color:                  @fg-col2;
    border:                      0 0 0.1em 0;
    border-color:                @border-col;
    border-radius:               0;
}


// Lists //
listbox {
    padding:                     0em;
    spacing:                     0em;
    orientation:                 vertical;
    children:                    [ "dummy" , "listview" , "dummy" ];
    background-color:            transparent;
}
listview {
    padding:                     1em;
    spacing:                     0em;
    enabled:                     true;
    columns:                     2;
    lines:                       7;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    expand:                      false;
    fixed-height:                true;
    fixed-columns:               true;
    cursor:                      "default";
    background-color:            transparent;
    text-color:                  @fg-col;
}
dummy {
    background-color:            transparent;
}


// Elements //
element {
    orientation:                 horizontal;
    enabled:                     true;
    spacing:                     2.5em;
    padding:                     0.5em;
    cursor:                      pointer;
    background-color:            transparent;
    text-color:                  @fg-col;
    orientation:                 horizontal;
}
element selected.normal {
    background-color:            @selected-col;
    text-color:                  @fg-col2;
    border-radius:               0.5em;
}
element-icon {
    size:                        1em;
    cursor:                      inherit;
    background-color:            transparent;
    text-color:                  inherit;
}
element-text {
    vertical-align:              0.5;
    horizontal-align:            0;
    cursor:                      inherit;
    text-color:                  inherit;
    background-color:            transparent;
}
